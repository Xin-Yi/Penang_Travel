<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/main_orange">

                    <ImageView
                        android:id="@+id/imagePic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/place_image" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="40dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Place Name"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/ic_pencil"
                            android:drawablePadding="10dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Address"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/ic_address"
                            android:drawablePadding="10dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Contact"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/ic_contact"
                            android:drawablePadding="10dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/ic_description"
                            android:drawablePadding="10dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Area"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/box_hintText"/>

                    <RadioGroup
                        android:id="@+id/rgArea"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/rbIsland"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Island"/>

                        <RadioButton
                            android:id="@+id/rbMainland"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mainland" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/festivalTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:background="@color/box_title"
                        android:text="Festival Celebration"
                        android:fontFamily="@font/lora"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/festival"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Festival Description"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color"
                            android:drawableLeft="@drawable/ic_festival"
                            android:drawablePadding="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/foodTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:background="@color/box_title"
                        android:text="Food"
                        android:fontFamily="@font/lora"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/food1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Food's Place Name 1"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color"
                            android:drawableLeft="@drawable/ic_food"
                            android:drawablePadding="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/food2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Food's Place Name 2"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color"
                            android:drawableLeft="@drawable/ic_food"
                            android:drawablePadding="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/hotelTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:background="@color/box_title"
                        android:text="Hotel"
                        android:fontFamily="@font/lora"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/hotel1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hotel's Place Name 1"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color"
                            android:drawableLeft="@drawable/ic_hotel"
                            android:drawablePadding="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/hotel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Hotel's Place Name 2"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color"
                            android:drawableLeft="@drawable/ic_hotel"
                            android:drawablePadding="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/medicalTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:background="@color/box_title"
                        android:text="Medical"
                        android:fontFamily="@font/lora"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medical1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Medical's Place Name"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color"
                            android:drawableLeft="@drawable/ic_medical"
                            android:drawablePadding="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/transportTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:background="@color/box_title"
                        android:text="Transport"
                        android:fontFamily="@font/lora"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/transport1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Transport's Place Name 1"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color"
                            android:drawableLeft="@drawable/ic_transport"
                            android:drawablePadding="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/transport2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Transport's Place Name 2"
                        android:textColorHint="@color/box_hintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color"
                            android:drawableLeft="@drawable/ic_transport"
                            android:drawablePadding="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:backgroundTint="@color/main_orange"
                    android:text="SAVE THIS PLACE"
                    android:fontFamily="@font/source_serif_pro"
                    android:textStyle="bold"
                    android:textSize="22dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>